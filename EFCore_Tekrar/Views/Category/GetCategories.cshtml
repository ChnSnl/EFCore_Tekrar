@model List<Category>

Yeni bir Kategori eklemek için <a asp-action="CreateCategory">Tıklayınız!</a>
<br />
    <table class="table table-hover">
        <tr>
            <th>ID</th>
            <th>Kategori Ismi</th>
            <th>Açıklaması</th>
            <th>Güncelleme İşlemi</th>
            <th>Silme İşlemi</th>
        </tr>

        @foreach (Category item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.CategoryName</td>
            <td>@item.Description</td>

            <td><a asp-action="UpdateCategory" asp-route-id="@item.ID" class="btn btn-warning">Güncelle</a></td>
            <td><a asp-action="DeleteCategory" asp-route-id="@item.ID" class="btn btn-danger">Sil</a></td>
        </tr>
        
    }
    </table>